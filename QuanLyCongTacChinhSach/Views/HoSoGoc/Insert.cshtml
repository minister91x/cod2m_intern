            }
        }
        $(document).ready(function () {
            showHoSoGoc(1);
            $('#customerDatatable td').on('click', function () {
                alert("123123");
            });
        });
        $("#Form_HoSoGoc").on("submit", function (e) {
            e.preventDefault();
            let formData = $('#Form_HoSoGoc').serialize();
            $.ajax({
                type: $('#Form_HoSoGoc').attr('method'),
                url: $('#Form_HoSoGoc').attr('action'),
                data: formData,
                success: function (response) {
                    if (response.IsSuccess) {
                        ShowToater('success', response.Message);
                        $("#Form_HoSoGoc").trigger('reset');
                        showHoSoGoc(1);
                    } else {
                        ShowToater('error', response.Message);
                    }
                }
            });
        })
        $("#btn-search").on("click", function (e) {
            e.preventDefault();
            showHoSoGoc(1);
        });
        $("#btn-delete").on("click", function (e) {
            e.preventDefault();
            swal({
                title: "Are you sure?",
                text: "Once deleted, you will not be able to recover this imaginary file!",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
                .then((willDelete) => {
                    if (willDelete) {
                        var id = $('#Id_ThongTin').val() // Extract the value from the element
                        $.ajax({
                            type: "POST",
                            url: "/HoSoGoc/Delete",
                            data: {
                                id: id
                            },
                            success: function (response) {
                                if (response.IsSuccess) {
                                    swal("Poof! Your imaginary file has been deleted!", {
                                        icon: "success",
                                    });
                                    $("#Form_HoSoGoc").trigger('reset');
                                    showHoSoGoc(1);
                                } else {
                                    ShowToaster('error', response.Message);
                                }
                            },
                            error: function (xhr, status, error) {
                                ShowToaster('error', 'An error occurred while processing your request.');
                            }
                        });
                    }
                });

           
        });
    </script>
}
