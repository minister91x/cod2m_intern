@using QuanLyCongTacChinhSach.DataAccess.DTOs
@using System.Web.Mvc
<style>
    .active-row {
        background-color: #f1f1f1;
    }
</style>
@model HoSoGoc
<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">Hồ sơ gốc</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        @using (Html.BeginForm("Insert", "HoSoGoc", FormMethod.Post, new { @id = "Form_HoSoGoc" }))
        {
            @Html.AntiForgeryToken()
            <div class="row">
                
                <div class="col-7">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Họ và tên</label>
                                <input type="checkbox" id="ckbHoVaTen" name="HoVaTen" value="HoVaTen">
                                @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control", @placeholder = "Vd: Nguyễn Trọng Quân", @id = "HoTen" } })
                                @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Số hiệu QN</label>
                                @Html.EditorFor(model => model.SoHieuQN, new { htmlAttributes = new { @class = "form-control", @placeholder = "Vd: QN123", @id = "SoHieuQN" } })
                                @Html.ValidationMessageFor(model => model.SoHieuQN, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Ngày sinh</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                                    </div>
                                    @Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { @class = "form-control", @data_inputmask_alias = "datetime", @data_inputmask_inputformat = "dd/mm/yyyy", @data_mask = "", @id = "NgaySinh" } })
                                    @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Loại hồ sơ</label>
                                @Html.DropDownListFor(model => model.LoaiHoSo, (SelectList)ViewBag.StateList, new { @class = "form-control select2", @style = "width: 100%;", @id = "LoaiHoSo" })
                                @Html.ValidationMessageFor(model => model.LoaiHoSo, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Quyền số</label>
                                @Html.EditorFor(model => model.QuyenSo, new { htmlAttributes = new { @class = "form-control", @type = "number", @id = "QuyenSo" } })
                                @Html.ValidationMessageFor(model => model.QuyenSo, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Trang số</label>
                                @Html.EditorFor(model => model.TrangSo, new { htmlAttributes = new { @class = "form-control", @id = "TrangSo" } })
                                @Html.ValidationMessageFor(model => model.TrangSo, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Số thứ tự</label>
                                @Html.EditorFor(model => model.SoThuTu, new { htmlAttributes = new { @class = "form-control", @id = "SoThuTu" } })
                                @Html.ValidationMessageFor(model => model.SoThuTu, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Id</label>
                                @Html.EditorFor(model => model.Id_ThongTin, new { htmlAttributes = new { @class = "form-control", @id = "Id_ThongTin" } })
                                @Html.ValidationMessageFor(model => model.MaHoSo, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Bắt đầu</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                                    </div>
                                    @Html.EditorFor(model => model.BatDau, new { htmlAttributes = new { @class = "form-control", @data_inputmask_alias = "datetime", @data_inputmask_inputformat = "dd/mm/yyyy", @data_mask = "", @id = "BatDau" } })
                                    @Html.ValidationMessageFor(model => model.BatDau, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Kết thúc</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                                    </div>
                                    @Html.EditorFor(model => model.KetThuc, new { htmlAttributes = new { @class = "form-control", @data_inputmask_alias = "datetime", @data_inputmask_inputformat = "dd/mm/yyyy", @data_mask = "", @id = "KetThuc" } })
                                    @Html.ValidationMessageFor(model => model.KetThuc, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Cơ quan TT bộ</label>
                                @Html.DropDownListFor(model => model.Id_CoQuanTTBo, (SelectList)ViewBag.StateList, new { @class = "form-control select2", @style = "width: 100%;", @id = "Id_CoQuanTTBo" })
                                @Html.ValidationMessageFor(model => model.Id_CoQuanTTBo, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Cơ quan tỉnh</label>
                                @Html.DropDownListFor(model => model.Id_CoQuanTinh, (SelectList)ViewBag.StateList, new { @class = "form-control select2", @style = "width: 100%;", @id = "Id_CoQuanTinh" })
                                @Html.ValidationMessageFor(model => model.Id_CoQuanTinh, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Cơ quan huyện</label>
                                @Html.DropDownListFor(model => model.Id_CoQuanHuyen, (SelectList)ViewBag.StateList, new { @class = "form-control select2", @style = "width: 100%;", @id = "Id_CoQuanHuyen" })
                                @Html.ValidationMessageFor(model => model.Id_CoQuanHuyen, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Cơ quan cụ thể</label>
                                @Html.DropDownListFor(model => model.Id_CoQuanCuThe, (SelectList)ViewBag.StateList, new { @class = "form-control select2", @style = "width: 100%;", @id = "Id_CoQuanCuThe" })
                                @Html.ValidationMessageFor(model => model.Id_CoQuanCuThe, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Cơ quan TT bộ</label>
                                @Html.DropDownListFor(model => model.Id_CoQuanXa, (SelectList)ViewBag.StateList, new { @class = "form-control select2", @style = "width: 100%;", @id = "Id_CoQuanXa" })
                                @Html.ValidationMessageFor(model => model.Id_CoQuanTTBo, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Mã hồ sơ</label>
                                @Html.EditorFor(model => model.MaHoSo, new { htmlAttributes = new { @class = "form-control", @id = "MaHoSo" } })
                                @Html.ValidationMessageFor(model => model.MaHoSo, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="d-flex justify-content-between">
                                <button class="btn btn-primary" id="btn-search" type="button">Tìm kiếm</button>
                                <button class="btn btn-secondary">Load lại</button>
                                <button class="btn btn-success">In phiếu</button>
                                <button class="btn btn-danger" type="submit">Thêm mới</button>
                                <button class="btn btn-warning" id="btn-update" type="button">Cập nhật</button>
                                <button class="btn btn-info" id="btn-delete">Xóa bỏ</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-5">
                    <div class="form-group">
                        <label>Thông tin chi tiết</label>
                        @Html.TextAreaFor(model => model.TTChiTiet, new { @class = "form-control", rows = "25", @id = "TTChiTiet" })
                        @Html.ValidationMessageFor(model => model.TTChiTiet, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        }
        <div class="p-2"></div>
        <table id="customerDatatable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Họ tên</th>
                    <th>Mã NV</th>
                    <th>Mã hồ sơ</th>
                    <th>Loại hồ sơ</th>
                    <th>Ngày sinh</th>
                    <th>Bắt đầu</th>
                    <th>Kết thúc</th>
                    <th>CQ TT Bộ</th>
                    <th>Cơ quan tỉnh</th>
                    <th>Cơ quan huyện</th>
                    <th>Cơ quan cụ thể</th>
                </tr>
            </thead>
            <tbody id="body-table-hosogoc">
            </tbody>
        </table>
    </div>
    <div class="card-footer clearfix">
        <ul class="pagination pagination-sm m-0 float-right">
            <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
        </ul>
    </div>
</div>
<script id="templateHtmlShowHoSoGoc" type="text/x-handlebars-template">
    <tr onclick="myFunction(this,'{Id_ThongTin}')">
        <td class="text-overflow">{Id_ThongTin}</td>
        <td class="text-overflow">{HoTen}</td>
        <td class="text-overflow">{MaNV}</td>
        <td class="text-center">{MaHoSo}</td>
        <td class="text-center">{LoaiHoSo}</td>
        <td class="text-center">
            {NgaySinh}
        </td>
        <td class="text-overflow">{BatDau}</td>
        <td class="text-overflow">{KetThuc}</td>
        <td class="text-overflow">{Id_CoQuanTTBo}</td>
        <td class="text-overflow">{Id_CoQuanTinh}</td>
        <td class="text-overflow">{Id_CoQuanHuyen}</td>
        <td class="text-overflow">{Id_CoQuanCuThe}</td>
    </tr>
</script>
@section Scripts{
    <script src="~/Content/Js/HoSoGoc.js"></script>
    <script>
        function myFunction(x, idThongTin) {
            $.ajax({
                url: '/HoSoGoc/GetById',
                type: 'GET',
                data: {
                    id: idThongTin
                },
                dataType: 'json',
                success: function (data) {
                    populateForm(data);
                },
                error: function (xhr, status, error) {
                    console.error('Error fetching data:', error);
                    // Handle error as needed
                }
            });
        }
        function appediaInput(data) {
